        <Label text="Selected Word:" />
        <Label fx:id="selectedWordLabel" />
        <Label text="New Definition:" />
        <TextField fx:id="newDefinitionTextField" />
        <Button text="Save" onAction="#saveDefinitionButtonClicked" />
    </VBox>

</AnchorPane>
