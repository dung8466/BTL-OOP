<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dictionary.AddWordController">
    <children>
        <VBox alignment="CENTER" spacing="10" layoutX="50" layoutY="50">
            <Label text="Add New Word" style="-fx-font-size: 20;" />
            <TextField fx:id="newWordField" promptText="New Word" />
            <TextField fx:id="newDefinitionField" promptText="Definition" />
            <Button text="Add" onAction="#addWord" />
        </VBox>
    </children>
</AnchorPane>

